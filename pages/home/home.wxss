page {
  background: #faf9f9;
}
.container {
  position: relative;
}
.ser_class {
  position: fixed; top: 0; left: 0; z-index: 10;
  width: 750rpx;
  height: 50px;
}
.wrapper {
  position: absolute; top: 50px; bottom: 0;
  left: 20rpx; right: 20rpx;
  height: 900px;
}
.wrapper > view {
  margin-top: 10px;
}
.wrapper > .title {
  width: 100%; padding: 10px 0;
  display: flex; justify-content: space-between; align-items: center;
}
.wrapper > .title > view:first-child {
  width: 350rpx;
}
.wrapper > .title > view:first-child image {
  width: 38px; height: 38px;
  vertical-align: top;
}
.wrapper > .title > view:first-child text {
  padding: 2px 10px; font-size: 24px;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 800; color: rgb(118, 50, 243);
}
.wrapper > .title > view:last-child {
  width: 400rpx;
}
.wrapper > .banner {
  width: 710rpx;
}
