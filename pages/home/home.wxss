.wrapper > .icons {
  display: flex; flex-wrap: wrap;
  padding: 10px 0; justify-content: space-evenly;
}
.wrapper > .icons > view {
  width: 150rpx; height: 70px; margin: 5px 0;
  border-radius: 50%;
  background-color: rgb(228, 157, 5); text-align: center; line-height: 70px;
}
.wrapper > .icons > view image {
  width: 88%; height: 88%; vertical-align: middle;
}
.wrapper > .discount {
  background: #fff;
  padding: 20px 40rpx;
  width: 630rpx;
  border-radius: 30px;
  box-shadow: 2px 2px 8px #cecece;
}
.wrapper > .discount .title {
  height: 30px; line-height: 30px;
}
.wrapper > .discount .title image {
  width: 24px; height: 24px; padding: 3px; vertical-align: top;
}
.wrapper > .discount .title text {
  font-size: 20px; font-weight: 600;
  padding-left: 15rpx; line-height: 30px;
}
.wrapper > .discount .info {
  display: flex; overflow: hidden;
}
.wrapper > .discount .info > view {
  width: 200rpx; padding: 0 5rpx;
}
.wrapper > .discount .info > view .img {
  height: 100px; overflow: hidden;
}